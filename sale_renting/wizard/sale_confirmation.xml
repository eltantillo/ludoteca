<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record model="ir.ui.view" id="sale_order_confirm_wizard_form_view">
            <field name="name">sale.order.confirm.wizard.form</field>
            <field name="model">sale.order.confirm.wizard</field>
            <field name="arch" type="xml">
                <form string="Missing expansions in order">
                    <h4>The following expansions require a Base Game:</h4>
                    <br/>
                    <field name="message" readonly="1"/>
                    <footer>
                        <button name="action_confirm" string="Confirm order" type="object" class="btn-primary"/>
                        <button string="Edit order" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

</odoo>
